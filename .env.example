# COPY THIS FILE TO .env.local AND FILL WITH YOUR VALUES
# For local development, create .env.local

# ENVIRONMENT
node.env=local

# KAFKA (Apache Kafka / Redpanda / etc)
kafka.broker.nodes=localhost:9092,broker2:9092
kafka.clientid=your-app-name
kafka.groupid=your-app-consumer-group

# POSTGRESQL
postgre.host=localhost
postgre.username=your_db_user
postgre.database.name=your_database
postgre.password=your_strong_password
postgre.port=5432
postgre.max.pool=20

# REDIS
redis.host=localhost
redis.port=6379
# Optional: redis.password=your_redis_password

# BCRYPT (Higher = more secure but slower)
bcrypt.salt.rounds=12

# KAFKA TOPICS
session.created.topic=auth.session.created
user.registered.topic=user.registered

# JWT & SESSION
access.token.expired.mins=15      # Access token expiry (minutes)
session.expired.days=7            # Refresh token/session expiry (days)

# RATE LIMITING
user.request.limit=100            # Requests per time window
user.request.time.seconds=60      # Time window in seconds

# HTTP SERVER
rest.app.port=3000